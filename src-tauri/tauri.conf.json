{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "WeReply",
  "version": "0.1.0",
  "identifier": "com.cacr.wereply",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "WeReply",
        "width": 680,
        "height": 920
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self'; img-src 'self' asset: data:; style-src 'self' 'unsafe-inline'; script-src 'self'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "resources/**/*"
    ],
    "icon": [
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ]
  }
}
